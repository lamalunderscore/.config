{
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true, // new
    
    "black-formatter.args": [
        "--line-length", "79",
       ],
 
    "[python]": {
        "editor.codeActionsOnSave": {
        "source.organizeImports": true
        },
        "editor.formatOnSave": true,
    },

    "flake8.args": [
        "--max-line-length", "79",
        "--extend-ignore", "E203"
       ],
}